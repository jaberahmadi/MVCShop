@using WiewModels;

@model PageListViewModel

<div id="divList">
    <table class="table-full table-total">
        <tr>
            <th>
                @Html.DisplayName("ID")
            </th>
            <th>
                @Html.DisplayName("نام نمایندگی")
            </th>
            <th>
                @Html.DisplayName("استان")
            </th>
            <th>
                @Html.DisplayName("شهر")
            </th>
            <th>
                @Html.DisplayName("آدرس")
            </th>
        </tr>

        @foreach (var item in Model.Resellers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ostan.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
            </tr>
        }
    </table>
    <div class="block-pagination" style="direction: ltr">
        @Html.AjaxPager(Model.TotalItemCount, 10, Model.CurrentPage, "GetAjaxPager", "Home", null, new PagerOptions
   {
       FirstPageText = "اول",
       LastPageText = "آخر",
       MorePageText = "بیشتر",
       NextPageText = "بعد",
       PrevPageText = "قبل",
       Id = "divAjaxPager",
       AjaxUpdateTargetId = "divList"
   }, null, null)

    </div>
</div>
