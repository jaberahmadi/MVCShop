@using DomainClass;

@model Factor

@{
    ViewBag.Title = "Buy";
}
<div class="block grid12">
    <div class="breadcrumb">
        <a href="/Home/Index">صفحه اصلی</a><span>›</span><a href="/Home/Buy">خرید محصولات</a>
    </div>
</div>
<div class="full12">
    <div class="block grid12">
        @using (Html.BeginForm("Buy", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <h1 class="block-header">خرید محصول</h1>
            <div class="separator"></div>
            <div class="block-standart">
                <div style="color:red">@ViewBag.Message</div>
                <p>
                    کاربر گرامی اطلاعات خود را وارد پر کنید
                </p>
                <div class="form inline">
                    <div class="group">
                        @Html.LabelFor(model => model.Name, new { @class = "label" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.Name, new { @class = "text", style = "width: 240px;" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="group">
                        @Html.LabelFor(model => model.Mobile, new { @class = "label" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.Mobile, new { @class = "text", style = "width: 240px;" })
                            @Html.ValidationMessageFor(model => model.Mobile)
                        </div>
                    </div>
                    <div class="group">
                        @Html.LabelFor(model => model.Email, new { @class = "label" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.Email, new { @class = "text", style = "width: 240px;" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="group">
                        @Html.LabelFor(model => model.CodePosti, new { @class = "label" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.CodePosti, new { @class = "text", style = "width: 240px;" })
                            @Html.ValidationMessageFor(model => model.CodePosti)
                        </div>
                    </div>
                    <div class="group">
                        @Html.LabelFor(model => model.Address, new { @class = "label" })
                        <div class="controls">
                            @Html.TextAreaFor(model => model.Address, new { @class = "text", style = "width: 85%; height:100px;" })
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                    </div>
                </div>
            </div>
            <div class="separator"></div>
            <div class="block-standart">
                <div class="form">
                    <div class="group">
                        <div class="controls">
                            <button class="button">ثبت اطلاعات و اتصال به درگاه بانکی</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
}
